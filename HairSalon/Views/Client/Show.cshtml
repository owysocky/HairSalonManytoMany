@{
  Layout = "_Layout";
}

<div class="container">
<div class="jumbotron">

  <h2>Client: @Model["client"].GetName()</h2>

</div>
<div class="row row-eq-height">
<div class="well col-xs-6">

  <form action='/stylists/@Model["stylist"].GetId()/clients/@Model["client"].GetId()/edit' method='get'>
  <button type="submit" class="btn btn-warning">Edit this client</button>
  </form>
  <br>
  <form action='/stylists/@Model["stylist"].GetId()/clients/new' method='get'>
  <button type="submit" class="btn btn-warning">Add another client</button>
  </form>
    <br>
  <form action='/stylists/@Model["stylist"].GetId()/clients/@Model["client"].GetId()/delete' method='post'>
  <button type="submit" class="btn btn-danger">Delete this client</button>
  </form>

  <br>
  <form action='/stylists' method='get'>
  <button type="submit" class="btn btn-info">View all stylists</button>
  </form>

</div>
<div class="well col-xs-6">

  <h2>Name: @Model["client"].GetName()</h2>
  <h2>Phone: @Model["client"].GetPhone()</h2>

</div>
</div>
</div>
