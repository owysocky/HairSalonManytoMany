@{
  Layout = "_Layout";
}

<div class="container">
<div class="jumbotron">
<h1>Specialties:</h1>
</div>
<div class="row row-eq-height">
<div class="well col-xs-6">
  <form action='/specialties/new' method='get'>
  <button type="submit" class="btn btn-warning">Add a new specialty</button>
  </form>
  <br>
  <form action='/stylists' method='get'>
  <button type="submit" class="btn btn-info">View stylists</button>
  </form>
  <br>
  <form action='/' method='get'>
  <button type="submit" class="btn btn-info">Back home</button>
  </form>
</div>
<div class="well col-xs-6">
  @if (Model.Count != 0)
  {
    <ul>
      @foreach (var specialty in Model)
      {
        <li><a href='/specialties/@specialty.GetId()'>@specialty.GetName()</a></li>
      }
    </ul>
  }
</div>
</div>
</div>
