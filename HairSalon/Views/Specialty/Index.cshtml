@{
  Layout = "_Layout";
}

<div class="container">
<div class="jumbotron">
<h1>Specialties:</h1>
</div>
<div class="menu">
@if (Model.Count != 0)
{
  <ul>
    @foreach (var specialty in Model)
    {
      <li><a href='/specialties/@specialty.GetId()'>@specialty.GetName()</a></li>
    }
  </ul>
}

<h4><a href="/specialties/new">Add new specialty</a></h4>
<h4><a href="/">Return home</a></h4>
</div>
