  Layout = "_Layout";
}

<div class="container">
<div class="jumbotron">

<h1>Add a new specialty</h1>
</div>
<div class="menu">

<form action="/specialties" method="post">
  <label for="name">Specialty name:</label>
  <input id="name" name="name" type="text">
