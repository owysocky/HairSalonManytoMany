@{
  Layout = "_Layout";
}

<div class="container">
<div class="jumbotron">

  <h2>Add a new specialty</h2>

</div>
<div class="row row-eq-height">
<div class="well col-xs-6">

  <form action='/specialties' method='get'>
  <button type="submit" class="btn btn-info">View all specialties</button>
  </form>
  <br>
  <form action='/' method='get'>
  <button type="submit" class="btn btn-info">Home</button>
  </form>

</div>
